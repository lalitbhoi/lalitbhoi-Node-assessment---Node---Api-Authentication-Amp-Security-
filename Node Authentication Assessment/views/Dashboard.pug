doctype html
html(lang="en")
  head
    include Common/Bootstrap.pug
    title Dashboard
    link(rel="stylesheet", href="CSS/styles.css")

  body
    nav.navbar.navbar-expand-lg.bg-body-tertiary.container-fluid
      a.navbar-brand(href='#') Navbar
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportedContent
        ul.navbar-nav.me-auto.mb-2.mb-lg-0
          li.nav-item
            a.nav-link.active(aria-current='page', href='#') Home
          li.nav-item
            a.nav-link(href='#') Link
          li.nav-item.dropdown
            a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false') Dropdown
            ul.dropdown-menu
              li
                a.dropdown-item(href='#') Action
              li
                a.dropdown-item(href='#') Another action
              li
                hr.dropdown-divider
              li
                a.dropdown-item(href='#') Something else here
              li.nav-item
                a.nav-link.disabled(aria-disabled='true') Disabled
        form.d-flex(role='search' action="POST")
        form.d-flex(role='search' action="POST")
          input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.m-2(type='submit') Search


    // Main content
    main.container
      h1.dashboard-heading Welcome to Your Dashboard
      .grid-container
        .grid-item
          .card
            .card-icon
              i.fas.fa-chart-line
            .card-content
              h2 Movie #{cart}
              p This is a sample card.
        .grid-item
          .card
            .card-icon
              i.fas.fa-users
            .card-content
              h2 Movie 2
              p This is another sample card.
        .grid-item
          .card
            .card-icon
              i.fas.fa-cogs
            .card-content
              h2 Movie 3
              p This is a third sample card.

      form.mt-5(method="POST")

        button.btn.btn-outline-success.m-2(name = "add_to_cart") Add
        button.btn.btn-outline-success.m-2(name = "Logout") Logout

  script(src="/Js/Dashboard.js")
